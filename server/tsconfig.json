{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "nodenext",   
    "moduleResolution": "nodenext",           
    "resolveJsonModule": true,                        
    "outDir": "./dist",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true, 
    "skipLibCheck": true,
  },
  "include": ["src/**/*","types/**/*" ]

}